section.list-product
    .container
        .row
            .col-12
                +pageChange(titlePages, "listProductPage.html")
        .row
            .col-12.col-md-4.col-lg-3
                section.list-product__sidebar.mt-4
                    .row
                        .col-12
                            .product__category.mb-5
                                .product__title
                                    h2= titleCategory
                                +productCategory(listCategory)
                        .col-12
                            .product__category.mb-5
                                .product__title
                                    h2= titlePrice
                                +productCategory(listPrice)
                        .col-12
                            .product__category.mb-5
                                .product__title
                                    h2= titleColor
                                +color(listColor)
            .col-12.col-md-8.col-lg-9
                .list-product.mt-4
                    img(src="../../images/sidebar.png", alt="side")
                    ul#pills-tab.nav.nav-pills.mb-3.mt-4(role='tablist')
                        li.nav-item
                            a#pills-list-tab.nav-link.active(data-toggle='pill' href='#pills-list' role='tab' aria-controls='pills-list' aria-selected='true')
                                i.fas.fa-th
                        li.nav-item
                            a#pills-grid-tab.nav-link(data-toggle='pill' href='#pills-grid' role='tab' aria-controls='pills-grid' aria-selected='false')
                                i.fas.fa-th-list
                        li.nav-item.d-flex.justify-content-end.filter
                            +filterProduct(filterProduct)
                    #pills-tab-content.tab-content
                        #pills-list.tab-pane.fade.show-in.active.in(role='tabpanel' aria-labelledby='pills-list-tab')
                            .list-product__gird
                                +products("", productTypeGrid, rating, "normal")
                        #pills-grid.tab-pane.fade(role='tabpanel' aria-labelledby='pills-grid-tab')
                            .list-product__list
                                +productTypeList(productTypeList, rating)
                .d-flex.justify-content-end.mt-5
                    +pagination(pagination)
